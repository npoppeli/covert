<!--! content -->
<table class='table table-bordered'
       tal:define="item this['content']; ui this['ui']; fields item.keys()">
  <tbody>
    <span tal:repeat="key fields" tal:omit-tag="">
        <tr tal:condition="ui[key]['formtype'] != 'hidden'">
            <td>${ui[key]['label']}</td>
            <td tal:define="value item[key]">
                <span tal:switch="isinstance(value,tuple)" tal:omit-tag="">
                    <span tal:case="True" tal:omit-tag=""><a href="${value[1]}">${value[0]}</a></span>
                    <span tal:case="False" tal:replace="value if value else ''"></span>
                </span>
            </td>
        </tr>
    </span>
  </tbody>
</table>
<!--! metadata -->
<div class="row" tal:define="item this['content']">
  <p class="text-muted small">Gemaakt op: ${item['ctime']}. Gewijzigd op: ${item['mtime']}.</p>
</div>
<!--! feedback -->
<div class="row" tal:condition="this['feedback']">
  <div tal:content="structure this['feedback']"></div>
</div>
<!--! buttons -->
<div class="row">
  <div>
      <a tal:repeat="button this['buttons']" href="${button['action']}">
          <button class="btn btn-primary btn-sm">
              <span class="${button['icon']}"></span>${button['label']}
          </button></a>&nbsp;
  </div>
</div>