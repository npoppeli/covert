<!--! data -->
<table class='table table-bordered'
       tal:define="item this['data']; meta this['meta']; fields item.keys()">
  <tbody id="item01" tal:attributes="class 'text-muted' if item['active'][0]=='n' else default">
    <span tal:repeat="key fields" tal:omit-tag="">
        <tr tal:condition="not meta[key]['auto']">
            <td>${meta[key]['label']}</td>
            <td tal:define="value item[key]">
                <span tal:switch="isinstance(value,tuple)" tal:omit-tag="">
                    <span tal:case="True" tal:omit-tag=""><a href="${value[1]}">${value[0]}</a></span>
                    <span tal:case="False" tal:replace="value if value else ''"></span>
                </span>
            </td>
        </tr>
    </span>
  </tbody>
</table>
<!--! auto fields -->
<div tal:define="item this['data']">
  <p class="text-muted small">Gemaakt op: ${item['ctime']}. Gewijzigd op: ${item['mtime']}.</p>
</div>
<!--! message -->
<div tal:condition="this['message']">
  <div tal:content="structure this['message']"></div>
</div>
<!--! buttons -->
<div>
  <a tal:repeat="button this['buttons']" href="${button['action']}" data-bind="item01" data-method="${button['method']}">
    <button class="btn btn-primary btn-sm">
      <span class="${button['icon']}"></span>${button['label']}</button></a>&nbsp;
</div>